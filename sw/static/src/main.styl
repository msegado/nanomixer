//fader-height = 576px
fader-height = 300px
fader-width = 50px
name-height = 16px
grip-height = 30px

*
    -moz-box-sizing border-box
    box-sizing border-box

html, body
    background black
    color white

.fader
    float left
    width fader-width
    height fader-height
    position relative
    .groove
        background #334
        width 4px
        height (fader-height - name-height - grip-height)
        position absolute
        top (grip-height / 2)
        left ((fader-width - @width) / 2)

    .grip
        width 20px
        height grip-height
        position absolute
        left ((fader-width - @width) / 2)

        // http://www.colorzilla.com/gradient-editor/#959595+0,0d0d0d+46,010101+50,0a0a0a+53,959595+100;Custom
        background: #959595;
        background: -moz-linear-gradient(top, #959595 0%, #0d0d0d 46%, #010101 50%, #0a0a0a 53%, #959595 100%);
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#959595), color-stop(46%,#0d0d0d), color-stop(50%,#010101), color-stop(53%,#0a0a0a), color-stop(100%,#959595));
        background: -webkit-linear-gradient(top, #959595 0%,#0d0d0d 46%,#010101 50%,#0a0a0a 53%,#959595 100%);
        background: -o-linear-gradient(top, #959595 0%,#0d0d0d 46%,#010101 50%,#0a0a0a 53%,#959595 100%);
        background: -ms-linear-gradient(top, #959595 0%,#0d0d0d 46%,#010101 50%,#0a0a0a 53%,#959595 100%);
        background: linear-gradient(to bottom, #959595 0%,#0d0d0d 46%,#010101 50%,#0a0a0a 53%,#959595 100%);

    .name
        width fader-width
        border 1px inset transparent
        text-align center
        position absolute
        bottom 0
        background #111
        color white
        &:hover
            border-color white

